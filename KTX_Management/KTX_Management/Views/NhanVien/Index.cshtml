@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-xl-center">Danh sách Nhân Viên</h1>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="HideUpdate();">Thêm Nhân Viên </button> <br /><br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th> id </th>
                <th> Name </th>
                <th> ChucVu </th>
                <th> Phone </th>
                <th>DiaChi</th>
                <th>GioiTinh</th>
                <th>Status</th>
                <th>User</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody class="tbody">
        </tbody>
    </table>
</div>


<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h4 class="modal-title">Thêm m?i</h4></div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="EmloyeeId">id</label>
                        <input type="text" class="form-control" id="id" placeholder="Mã" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" id="Name" placeholder="Tên" />
                    </div>
                    <div class="form-group">
                        <label for="ChucVu">ChucVu</label>
                        <input type="text" id="ChucVu" placeholder="Chức vụ" />
                    </div>
                    <div class="form-group">
                        <label for="Price">Phone</label>
                        <input type="text" id="Phone" placeholder="Số điện thoại" />
                    </div>
                    <div class="form-group">
                        <label for="Price">DiaChi</label>
                        <input type="text" id="DiaChi" placeholder="Địa chỉ" />
                    </div>
                    <div class="form-group">
                        <label for="Price">GioiTinh</label>
                        <input type="text" id="GioiTinh" placeholder="Giới Tính" />
                    </div>
                    <div class="form-group">
                        <label for="Price">Status</label>
                        <input type="text" id="Status" placeholder="Status" />
                    </div>
                    <div class="form-group"
                        <label for="Price">User</label>
                        <input type="text" id="User" placeholder="User" />
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" id="Password" placeholder="Password" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return AddNhanVien();"> Add </button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none" onclick="return EditNhanVien()">Update</button>
                <button type="button" class="btn btn-dark" id="close"
                        data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/bootstrap/js/jquery-3.3.1.min.js"></script>
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Scripts/NhanVien.js"></script>
