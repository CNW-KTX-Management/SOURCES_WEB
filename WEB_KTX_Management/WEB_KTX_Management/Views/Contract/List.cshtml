<div class="container" style="margin: 20px">
    <h3>Danh sách hợp đồng</h3>

    <br />

    <table class="table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Ngày làm đơn</th>
                <th>Sinh viên</th>
                <th>Tình trạng</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody class="tbody">
        </tbody>
    </table>
    <br />
</div>

<button type="button" class="btn btn-primary" style="margin-left: 20px; text-align: center">Tạo hợp đồng mới</button>


<div class="modal" id="myModal" role="dialog" aria-labelledby="myModelLabel" aria-hidden="true">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Cập nhật hợp đồng</h4>
        </div>

        <div class="modal-body">
            <form>
                <div class="form-group">
                    <label>Ngày bắt đầu</label>
                    <input type="date" class="form-control" id="NgayBatDau" />
                </div>

                <div class="form-group">
                    <label>Ngày kết thúc</label>
                    <input type="date" class="form-control" id="NgayKetThuc" />
                </div>

                <div class="form-group">
                    <label>Tình trạng</label>
                    <input type="text" class="form-control" id="TinhTrang" />
                </div>
            </form>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="btnUpdate" onclick="return updateContract()">Cập nhật</button>
            <button type="button" class="btn btn-default" id="btnClose" data-dismiss="modal">Đóng</button>
        </div>
    </div>
</div>

<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Scripts/ContractScript.js"></script>
